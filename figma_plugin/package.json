{
  "name": "dscompiler",
  "version": "1.0.0",
  "description": "Your Figma Plugin",
  "main": "code.js",
  "scripts": {
    "bundle": "./node_modules/.bin/esbuild src/code.ts --bundle --outfile=code.js",
    "test": "jest",
    "typecheck": "tsc --project tsconfig.json",
    "watch": "parallel --ungroup 'npm run' ::: watch_typecheck watch_bundle",
    "watch_bundle": "npm run bundle -- --watch=forever",
    "watch_test": "npm run test -- --watch",
    "watch_typecheck": "npm run typecheck -- --watch --preserveWatchOutput"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/plugin-typings": "^1.64.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "esbuild": "0.17.19",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
